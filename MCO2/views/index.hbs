<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" type="text/css" href="/css/index.css">
        {{!-- imports --}}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="https://unpkg.com/validator@latest/validator.min.js"></script>

        <!-- Unicons -->
        <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css" />

        <title>Salamin | Home</title>
    </head>
    <body>
        

        <!-- Home -->
        <div class="home">
            <div class="form_content">
                <i class="uil uil-times form_close"></i>

                <!-- Login Form -->
                <div class="login_form">
                    <form action="#">
                        <h2>Login</h2>

                        <div class="input_box">
                            <input type="text" name="username" id="username" placeholder="Enter your username" required />
                            <i class="uil uil-at"></i>
                        </div>

                        <div class="input_box">
                            <input type="password" name="password" id="password" placeholder="Enter your password" required />
                            <i class="uil uil-lock password"></i>
                            <i class="uil uil-eye-slash pw_hide"></i>
                        </div>


                        <div class="options">
                            <span class="checkbox">
                                <input type="checkbox" id="check">
                                <label for="check">Remember me</label>
                            </span>
                            <a href="#" class="forgot_pw">Forgot password?</a>
                        </div>

                        <button class="button">
                            <a href="/home" style="color: white; text-decoration: none;">Login Now</a>
                        </button>

                        <div class="login_sign-up">Don't have an account yet? <a href="#" id="sign-up"> Sign-up</a></div>
                    </form>
                </div>

                <!-- Sign-up Form -->
                <div class="sign-up_form">
                    <form id="signup" method="post">
                        <h2>Sign-up</h2>

                        <div class="input_box">
                            <input type="text" name="displayName" id="displayName" placeholder="Enter your name" required />
                            <i class="uil uil-user"></i>
                            <p id="displayNameError" class="error">{{displayNameError}}</p>
                        </div>

                        <div class="input_box">
                            <input type="text" name="username" id="username_signup" placeholder="Enter your username" required />
                            <i class="uil uil-at"></i>
                            <p id="usernameError" class="error">{{usernameError}}</p>
                        </div>

                        <div class="input_box">
                            <input type="password" name="password" id="password" placeholder="Create your password" required />
                            <i class="uil uil-lock password"></i>
                            <i class="uil uil-eye-slash pw_hide"></i>
                            <p id="pwError" class="error">{{pwError}}</p>
                        </div>

                        <div class="input_box">
                            <input type="password" name="password2" id="password2" placeholder="Confirm your password" required />
                            <i class="uil uil-lock password"></i>
                            <i class="uil uil-eye-slash pw_hide"></i>
                            <p id="pw2Error" class="error">{{pw2Error}}</p>
                        </div>
                        
                        <button class="button">
                            <a href="/home" style="color: white; text-decoration: none;">Sign-Up Now</a>
                        </button>

                        <div class="login_sign-up">Already have an account?<a href="#" id="sign-up"> Log-in</a></div>
                    </form>
                </div>
            </div> 

            <div class="page">
                <!-- Header -->
                <header class="header">
                    
                        <div class="header-logo"></div>
    
                        <div class="search-bar">
                            <ion-icon name="search-outline"></ion-icon>
                            <form class="searchForm">
                                <input type="text" placeholder="Search" id="search" name="filter">
                            </form>
                        </div>
            
                        <nav class="dropdown-container">
                            <ion-icon class="dropdown-button" name="filter-outline"></ion-icon>
            
                            <div class = "dropdown-items">
                                <button onclick="window.location.href = '/index?sortBy=recent';">Recent</button>
                                <button onclick="window.location.href = '/index?sortBy=old';">Old</button>
                                <button onclick="window.location.href = '/index?sortBy=popular';">Popular</button>
                                <button onclick="window.location.href = '/index?sortBy=unpopular';">Unpopuar</button>
                            </div>
                        </nav>
                    
                        
                        <!-- Login Button -->
                        <button class="nav_btn" id="form-open">Login</button>
                </header>
    
                <div class="box">
                    <input type="text" placeholder="Title" class="post-title" id="post-title">
                    <span class="textarea" role="textbox" id="post-box" contenteditable></span>
                    
                    <button id="form-open-post" >Post</button>
                </div>
        
                <div class="page-content" id="page-content"> <!-- timeline -->
                    {{#each posts}}
                        {{> postprev}}
                    {{/each}}
                 
                </div>
            </div>
        </div>

        
   
        
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    <script src="../js/unregistered.js"></script>
    
    
    </body>
</html>
