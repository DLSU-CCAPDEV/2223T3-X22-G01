<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" type="text/css" href="/css/index.css">

        {{!-- imports --}}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

        <!-- Unicons -->
        <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css" />

        <title>Salamin | Home</title>
    </head>

    <body>
        {{!-- HOME --}}
        <div class="home">

            {{!-- PAGE --}}
            <div class="page">

                {{!-- HEADER --}}
                <header class="header">

                    <div class="header-logo"></div>

                    {{!-- SEARCH BAR --}}
                    <div class="search-bar">
                        <ion-icon name="search-outline"></ion-icon>
                        <form class="searchForm">
                            <input type="text" placeholder="Search..." id="search" name="search">
                        </form>
                    </div>
                    {{!-- SEARCH BAR END --}}

                    {{!-- FILTER OPTIONS --}}
                    <nav class="dropdown-container">
                        <ion-icon class="dropdown-button" name="filter-outline"></ion-icon>
        
                        <div class = "dropdown-items">
                            <button>Recent</button>
                            <button>Old</button>
                            <button>Popular</button>
                            <button>Unpopuar</button>
                        </div>
                    </nav>
                    {{!-- FILTER OPTIONS END --}}

                    {{!-- LOGIN BUTTON --}}
                    <a href="/login"><button class="nav_btn" id="form-open">Login</button></a>
                    {{!-- LOGIN BUTTON END --}}

                </header>
                {{!-- HEADER END --}}
                
                {{!-- POST PREVIEWS --}}
                <div class="page-content" id="page-content"> <!-- timeline -->
                    {{#each posts}}
                        {{> postprev}}
                    {{/each}}
                </div>
                {{!-- POST PREVIEWS END --}}

            </div>
            {{!-- PAGE END --}}

        </div>
        {{!-- HOME END --}}

    {{!-- ICONS IMPORT --}}
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    {{!-- ICONS IMPORT END --}}

    </body>
</html>